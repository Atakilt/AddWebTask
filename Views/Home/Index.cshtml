@model IEnumerable<User>

@{
    ViewData["Title"] = "Create User";
}

@if (Model.Count() != 0)
{
  foreach(var item in Model)
  {
     <table class="table table-striped table-responsive table-bordered">
         <tbody>
             <tr>
                 <td><strong>First Name:</strong> @item.FirstName</td>
                 <td><strong>Last Name:</strong> @item.LastName</td>
                 <td><strong>Email:</strong> @item.Email</td>
                 <td><strong>Address:</strong> @item.Address</td>
                 <td><strong>Date of Birth:</strong> @item.DateOfBirth</td>
             </tr>
             <tr>
                 <td colspan="3">
                     <table class="table table-dark">
                         <thead>
                             <tr>
                                 <th scope="col">Company Name</th>
                                 <th scope="col">Position</th>
                                 <th scope="col">From Date</th>
                                 <th scope="col">To Date</th>
                             </tr>                           
                         </thead>
                         <tbody>
                             @foreach(var exp in item.Experiences)
                             {
                             <tr>
                                 <td>@exp.CompanyName</td>
                                 <td>@exp.Position</td>
                                 <td>@exp.FromDate</td>
                                 <td>@exp.ToDate</td>
                             </tr>
                             }
                         </tbody>
                     </table>
                 </td>
             </tr>
         </tbody>
     </table>
  }
}
else
{
  <p>No data to display.</p>
}


